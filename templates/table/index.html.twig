{% extends 'base.html.twig' %}

{% block title %}Table List{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold text-center text-blue-600 mb-6">Table List</h1>

    <table class="table-auto w-full bg-white shadow rounded">
        <thead class="bg-gray-100">
            <tr>
                <th class="px-4 py-2 border">Table Number</th>
                <th class="px-4 py-2 border">Capacity</th>
                <th class="px-4 py-2 border">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for table in tables %}
            <tr class="hover:bg-gray-50">
                <td class="px-4 py-2 border">{{ table.number }}</td>
                <td class="px-4 py-2 border">{{ table.capacity }}</td>
                <td class="px-4 py-2 border space-x-2">
                    <a href="{{ path('app_table_show', {'id': table.id}) }}" class="text-blue-600 hover:underline">Show</a>
                    <a href="{{ path('app_table_edit', {'id': table.id}) }}" class="text-green-600 hover:underline">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="text-center py-4">No tables found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="mt-6 text-center">
        <a href="{{ path('app_table_new') }}" class="inline-block px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded transition ease-in-out duration-200">
            Create New Table
        </a>
    </div>
{% endblock %}
