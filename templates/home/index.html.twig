{% extends 'base.html.twig' %}

{% block title %}Welcome to the Restaurant App
{% endblock %}

{% block body %}
	<div
		class="flex flex-col items-center justify-center min-h-screen bg-gray-50">
		<!-- Hero Section -->
		<div class="text-center bg-white shadow-lg rounded-lg p-8 max-w-2xl">
			<h1 class="text-4xl font-extrabold text-blue-600 mb-4">Welcome to the Restaurant App!</h1>
			<p class="text-lg text-gray-700 mb-6">
				Discover amazing restaurants, menus, and more. Manage reservations with ease!
			</p>

			<!-- Conditional Content -->
			{% if app.user %}
				<p class="text-lg font-medium text-green-600 mb-4">
					You are logged in as
					<span class="font-bold">{{ app.user.email }}</span>.
				</p>
				<a href="{{ path('user_dashboard') }}" class="bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 transition duration-300">
					Go to Dashboard
				</a>
			{% else %}
				<a href="{{ path('app_login') }}" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition duration-300">
					Login
				</a>
				<p class="mt-4 text-sm text-gray-500">
					Don't have an account?
					<a href="{{ path('app_register') }}" class="text-blue-600 hover:underline">Sign up</a>.
				</p>
			{% endif %}
		</div>
	</div>
{% endblock %}
