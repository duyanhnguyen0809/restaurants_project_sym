{% extends 'base.html.twig' %}

{% block title %}Reservation Details{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold text-center text-blue-600 mb-6">Reservation Details</h1>

    <table class="table-auto w-full bg-white shadow rounded mb-4">
        <tbody>
            <tr>
                <th class="px-4 py-2 border">Reservation Date</th>
                <td class="px-4 py-2 border">{{ reservation.date|date('Y-m-d H:i') }}</td>
            </tr>
            <tr>
                <th class="px-4 py-2 border">Customer Name</th>
                <td class="px-4 py-2 border">{{ reservation.customerName }}</td>
            </tr>
        </tbody>
    </table>

    <div class="text-center space-x-4">
        <a href="{{ path('app_reservation_index') }}" class="inline-block px-6 py-2 bg-gray-600 hover:bg-gray-700 text-white font-bold rounded transition ease-in-out duration-200">
            Back to List
        </a>
        <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="inline-block px-6 py-2 bg-green-600 hover:bg-green-700 text-white font-bold rounded transition ease-in-out duration-200">
            Edit
        </a>
    </div>
{% endblock %}
