{% extends 'base.html.twig' %}

{% block title %}Restaurant Details{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-4">Restaurant Details</h1>

    <table class="table-auto w-full bg-white shadow rounded mb-4">
        <tbody>
            <tr>
                <th class="px-4 py-2 border">Id</th>
                <td class="px-4 py-2 border">{{ restaurant.id }}</td>
            </tr>
            <tr>
                <th class="px-4 py-2 border">Name</th>
                <td class="px-4 py-2 border">{{ restaurant.name }}</td>
            </tr>
            <tr>
                <th class="px-4 py-2 border">Location</th>
                <td class="px-4 py-2 border">{{ restaurant.location }}</td>
            </tr>
        </tbody>
    </table>

    <div class="space-x-4">
        <a href="{{ path('app_restaurant_index') }}" class="inline-block px-6 py-2 font-bold rounded bg-gray-600 hover:bg-gray-700 focus:ring-2 focus:ring-gray-500 text-white transition ease-in-out duration-200">Back to List</a>
        <a href="{{ path('app_restaurant_edit', {'id': restaurant.id}) }}" class="inline-block px-6 py-2 font-bold rounded bg-green-600 hover:bg-green-700 focus:ring-2 focus:ring-green-500 text-white transition ease-in-out duration-200">Edit</a>
        {{ include('restaurant/_delete_form.html.twig') }}
    </div>
{% endblock %}
