{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container mx-auto max-w-lg">
    <h1 class="text-2xl font-bold text-center mb-4">Register</h1>

    {{ form_start(registrationForm) }}
        <div class="mb-4">
            {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'block font-bold'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full px-4 py-2 border rounded'}}) }}
            {{ form_errors(registrationForm.email) }}
        </div>
        <div class="mb-4">
            {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'block font-bold'}}) }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full px-4 py-2 border rounded'}}) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>
        <button type="submit" class="w-full bg-blue-600 text-white font-bold py-2 px-4 rounded hover:bg-blue-700">
            Register
        </button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
